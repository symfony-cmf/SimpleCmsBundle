<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cmf_simple_cms.persistence.phpcr.migrator_page_class">Symfony\Cmf\Bundle\SimpleCmsBundle\Migrator\Phpcr\Page</parameter>
    </parameters>

    <services>

        <service id="cmf_simple_cms.persistence.phpcr.migrator.page" class="%cmf_simple_cms.persistence.phpcr.migrator_page_class%">
            <argument type="service" id="doctrine_phpcr"/>
            <argument>%cmf_simple_cms.persistence.phpcr.basepath%</argument>
            <argument>%kernel.root_dir%/Resources/data/pages</argument>
            <tag name="doctrine_phpcr.migrator" alias="page" />
        </service>

    </services>
</container>
